<resources>
    <!-- Style pour le bouton de connexion -->
    <style name="ButtonStyle">
        <item name="android:backgroundTint">#FF4C61</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Style générique pour le texte (si nécessaire) -->
    <style name="TextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <!-- Style pour les titres et textes -->
    <style name="TextStyle.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle.Body">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#B0B3C7</item>
    </style>

    <!-- Style pour les items de la liste -->
    <style name="ListItemStyle">
        <item name="android:background">#323B4D</item>
        <item name="android:padding">12dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:elevation">4dp</item>
    </style>
</resources>
